			"name": "Launch debug",
			"type": "cppvsdbg",
			"request": "launch",
			"program": "${workspaceFolder}/main.exe",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}/",
			"environment": [],
