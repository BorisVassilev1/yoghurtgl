				"console": "integratedTerminal",
				"type": "cppvsdbg",
				"program": "${workspaceRoot}/main.exe"
			}
		},
		{
			"name": "Launch",
			"type": "f5anything",
			"request": "launch",
			"command": "${workspaceFolder}/main.exe",
			"preLaunchTask": "make project",
			"linux": {
				"command": "cd ${workspaceRoot} && ${workspaceRoot}/main",
			},
			"windows": {
				"command": "${workspaceRoot}/main.exe"
			}
		}
	]
